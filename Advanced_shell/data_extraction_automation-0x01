#!/bin/bash

if [ ! -f data.json ]; then
echo "data.json file not found!"
exit 1
fi

name=$(jq -r '.name' data.json | sed 's/.*/\u&/')                     # Capitalize name
type=$(jq -r '.types[0].type.name' data.json | sed 's/.\*/\u&/') # First type, capitalize
weight=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1 / 10}') # Convert to kg
height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}') # Convert to m

echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
