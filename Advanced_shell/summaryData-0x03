#!/bin/bash

OUTPUT_FILE="summary.csv"
TEMP_FILE="temp.txt"

# Prepare CSV headers
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Read all JSON files and extract data
for file in *.json; do
    name=$(jq -r '.name' "$file")
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert to meters and kg, format with sed
    height_m=$(echo "scale=1; $height / 10" | bc | sed 's/$/m/')
    weight_kg=$(echo "scale=1; $weight / 10" | bc | sed 's/$/kg/')

    # Strip the unit for the CSV (since headers already say m/kg)
    echo "$name,${height_m%m},${weight_kg%kg}" >> "$OUTPUT_FILE"
done

# Calculate averages using awk (still allowed for averages)
awk -F, 'NR > 1 {height+=$2; weight+=$3; count++}
         END {print "Average Height (m): " height/count "\nAverage Weight (kg): " weight/count}' "$OUTPUT_FILE" > "$TEMP_FILE"

cat "$TEMP_FILE"
